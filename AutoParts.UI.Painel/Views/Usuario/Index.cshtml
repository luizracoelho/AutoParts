@model IEnumerable<AutoParts.UI.Painel.Models.UsuarioVM>

@{
    ViewBag.Title = "Usuários";
}

<p>
    <ul class="breadcrumb">
        <li>
            <i class="glyphicon glyphicon-user"></i> Usuários
        </li>
        <li>
            <a href="@Url.Action("Salvar")" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-plus"></i> Adicionar</a>
        </li>
    </ul>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="media">
                        <div class="media-left media-middle">
                            <img src="~/Images/photo.jpeg" class="media-object img-circle" style="width: 7.5rem;" alt="@Html.DisplayFor(modelItem => item.Login)">
                        </div>
                        <div class="media-body media-middle">
                            <h4 class="media-heading">@Html.DisplayFor(modelItem => item.Nome)</h4>
                            <a href="@Url.Action("Salvar", new { id = item.UsuarioId })"><strong>@@@Html.DisplayFor(modelItem => item.Login)</strong></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
