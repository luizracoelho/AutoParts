@model IEnumerable<AutoParts.UI.Painel.Models.ProdutoVM>

@{
    ViewBag.Title = "Produtos";
}
<p>
    <ul class="breadcrumb">
        <li>
            <i class="glyphicon glyphicon-shopping-cart"></i> Produtos
        </li>
        <li>
            <a href="@Url.Action("Salvar")" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-plus"></i> Adicionar</a>
        </li>
    </ul>
</p>

<table class="table table-condensed table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Salvar", new { id = item.ProdutoId })"><strong>@Html.DisplayFor(modelItem => item.Nome)</strong></a>
                </td>
                <td>
                    @Html.Raw(item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
            </tr>
        }
    </tbody>
</table>
