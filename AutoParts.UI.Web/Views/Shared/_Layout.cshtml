<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SQL AutoParts</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/scripts/modernizr-2.8.3.js"></script>
    <script src="~/scripts/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("Scripts", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Images/logo.png" alt="AutoParts SQL" class="img-circle" style="width: 8rem;" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Produtos", "Produtos")</li>
                    <li>@Html.ActionLink("Serviços", "Servicos")</li>
                    <li>@Html.ActionLink("Contato", "Contato")</li>
                </ul>
            </div>
        </div>
    </div>

    @RenderSection("Carrousel", false)

    <div class="container body-content">
        @RenderBody()

    </div>

    <footer class="text-center bg-footer">
        <div class="container">
            <br />
            <p>&copy; @DateTime.Now.Year - SQL AutoParts</p>
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <a class="btn btn-primary center-block">
                            <span class="fa fa-facebook"></span> Facebook
                        </a>
                    </div>
                    <div class="col-xs-12 col-sm-4 center-block">
                        <a class="btn btn-info center-block">
                            <span class="fa fa-twitter"></span> Twitter
                        </a>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <a class="btn btn-danger center-block">
                            <span class="fa fa-google-plus"></span> Google Plus
                        </a>
                    </div>
                </div>
                <br />
            </div>
        </div>
    </footer>
</body>
</html>