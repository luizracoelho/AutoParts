@model AutoParts.UI.Web.Areas.Painel.Models.ProdutoVM

@{
    ViewBag.Title = "Detalhes do Produto";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-sm-8 text-center">
            <h3>@Html.DisplayFor(model => model.Nome)</h3>
            <hr />
            <h2>@Html.DisplayFor(model => model.Valor)</h2>
            <p>
                @Html.Raw(Model.Descricao)
            </p>
        </div>
        <div class="img-thumbnail media-object img-profile-lg col-sm-4">
            <img src="~/@Model.Imagem" style="width: 100%;" alt="@Html.DisplayFor(model => model.Nome)" />
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Voltar para Lista", "Produtos")
</p>
